<h1>Update {{person.first_name}} {{person.last_name}}:</h1>
<p>Supervised By: {{person.supervisor_first_name}} {{person.supervisor_last_name}}</p>
<div class="update-class">
    <form id="update-person" action="/football/personnel" method="post" class="form-inline">
        <label for="First Name">First Name:</label>
        <input type="text" name="first_name" value="{{person.first_name}}" required>
        <label for="Last Name">Last Name:</label>
        <input type="text" name="last_name" value="{{person.last_name}}" required>
        <label for="Team">Team:</label>
        <select name="team_id" id="team-selector">
            {{#each teams}}
            <option value="{{team_id}}">{{team_name}}</option>
            {{/each}}
        </select>
        <label for="Salary">Salary = :</label>
        <input type="number" name="salary" value="{{person.salary}}" required>
        <label for="Height">Height = :</label>
        <input type="number" name="height" value="{{person.height}}" required>
        <label for="Weight">Weight = :</label>
        <input type="number" name="weight" value="{{person.weight}}" required>
    </form>
    <button onclick="updatePerson({{person.personnel_id}})" class="update-personnel-button">Update</button>
</div>

<h4>Add A New Position</h4>

<div class="add-class">
    <form id="addPositionToPlayer" action="/football/personnel/add-position/{{person.personnel_id}}" method="post" class="form-inline">
        <label for="Name" class="wide-select">Position Name:</label>
        <select name="position_id" class="wide-select" required>
            {{#each available_positions}}
            <option value="{{position_id}}">{{position_name}} - {{code_name}}</option>
            {{/each}}
        </select><br />
        <input type="submit" value="Submit" class="add-position-to-personnel-submit" />
    </form>
</div>

<h4>List of Current Positions</h4>
<div class="view-class">
    <table>
        <thead>
        <th>Position Name</th>
        <th>Code Name</th>
        </thead>
        <tbody>
            {{#each positions}}
            <tr>
                <td>{{position_name}}</td>
                <td>{{code_name}}</td>
                <td><a href="/football/personnel/remove-position/{{personnel_id}}/{{position_id}}">Remove</a></td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script defer>selectTeam({{person.team_id}});</script>
